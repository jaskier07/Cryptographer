<Window x:Class="Cryptographer.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptographer"
        mc:Ignorable="d"
        Title="NewUserWindow" Height="300" Width="300">
    <Grid>
        <Label Content="Add new user" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.093,-0.091" Width="272" Height="46" FontSize="25"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="272" FontSize="15"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top" Width="272" FontSize="15"/>
        <TextBox Name="email" HorizontalAlignment="Left" Height="23" Margin="10,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" TextChanged="TextBox_TextChanged" FontSize="15"/>
        <TextBox Name="password" HorizontalAlignment="Left" Height="23" Margin="10,176,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" FontSize="15"/>
        <Button Click="AddNewUser" Content="Add" HorizontalAlignment="Left" Margin="177,225,0,0" VerticalAlignment="Top" Width="105" Height="34" FontSize="15"/>

    </Grid>
</Window>
